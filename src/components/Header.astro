<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-200 py-4">
  <div class="max-w-5xl mx-auto px-6 flex items-center justify-between">
    <a href="/" class="font-mono text-xs text-zinc-600 hover:text-zinc-900 transition-colors">
      s-hub
    </a>

    <nav class="flex items-center gap-5">
      <a href="#products" class="nav-link font-mono text-xs text-zinc-400 hover:text-zinc-700 transition-colors">
        extensions
      </a>
      <a href="#about" class="nav-link font-mono text-xs text-zinc-400 hover:text-zinc-700 transition-colors">
        about
      </a>
    </nav>
  </div>
</header>

<script>
  const header = document.getElementById('header');

  function handleScroll() {
    if (window.scrollY > 20) {
      header?.classList.add('header-scrolled');
    } else {
      header?.classList.remove('header-scrolled');
    }
  }

  window.addEventListener('scroll', handleScroll);
  handleScroll();
</script>
