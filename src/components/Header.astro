      <span class="text-xl font-bold tracking-tighter text-white">S-HUB</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center space-x-8">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="text-sm font-medium text-zinc-400 hover:text-white transition-colors"
        >
          {item.name}
