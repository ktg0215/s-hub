---

<section id="products" class="py-16 px-6 max-w-6xl mx-auto">
  <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <h2 class="font-mono text-[11px] text-zinc-400 tracking-wide">// extensions</h2>
    <div class="flex flex-wrap gap-1" id="category-tabs">
      {categories.map((cat, idx) => (
        <button
          data-category={cat}
          class={`category-tab ${idx === 0 ? 'active' : ''}`}
        >
          {cat}
        </button>
      ))}
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3" style="grid-auto-flow: dense" id="products-grid">
    {products.map((product, idx) => {
      const isComingSoon = product.priceType === 'Coming Soon';
      const isFeatured = product.reviewCount >= 10;
      return (
        <div
          class={`product-card group p-4 flex flex-col h-full fade-in ${isComingSoon ? 'coming-soon' : ''} ${isFeatured ? 'featured' : ''}`}
          data-category={product.category}
          style={`animation-delay: ${idx * 60}ms`}
        >
          <div class="flex items-center gap-2.5 mb-2.5">
            <img
              src={product.icon}
              alt={`${product.name} Icon`}
              width="28"
              height="28"
              class="w-7 h-7 rounded-lg object-cover"
              loading="lazy"
            />
            <div class="min-w-0">
              <h3 class="text-[12px] font-medium text-zinc-900 truncate">
                {product.name}
              </h3>
              <div class="flex items-center gap-1.5">
                <span class="font-mono text-[9px] text-zinc-400">{product.category}</span>
                {product.rating > 0 && (
                  <span class="font-mono text-[9px] text-amber-500">★ {product.rating}</span>
                )}
              </div>
            </div>
          </div>

          <p class="text-zinc-500 text-[11px] leading-relaxed mb-3 flex-grow line-clamp-2">
            {product.description}
          </p>

          <div class="mt-auto flex items-center justify-between pt-2.5 border-t border-zinc-100/80">
            {product.priceType === 'Free' ? (
              <span class="font-mono text-[10px] text-emerald-600">
                {product.priceLabel ? `free / ${product.priceLabel.toLowerCase()}` : 'free'}
              </span>
            ) : product.priceType === 'Paid' ? (
              <span class="font-mono text-[10px] text-sky-600">
                {product.priceLabel.toLowerCase()}
              </span>
            ) : (
              <span class="font-mono text-[10px] text-zinc-300">
                wip
              </span>
            )}
            <a
              href={product.ctaLink}
              class="btn-detail"
            >
              details →
            </a>
          </div>
        </div>
      );
    })}
  </div>

  <div id="empty-state" class="hidden text-center py-12">
    <p class="font-mono text-zinc-400 text-xs">// no extensions in this category</p>
  </div>
</section>

<script>
  const tabs = document.querySelectorAll('#category-tabs button');
  const products = document.querySelectorAll('#products-grid > div');
  const emptyState = document.getElementById('empty-state');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Update active tab
      tabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');

      const category = tab.dataset.category;
      let visibleCount = 0;

      products.forEach(product => {
        const productCategory = product.dataset.category;
        if (category === 'All' || productCategory === category) {
          product.classList.remove('hidden');
          visibleCount++;
        } else {
          product.classList.add('hidden');
        }
      });

      // Show/hide empty state
      if (visibleCount === 0) {
        emptyState?.classList.remove('hidden');
      } else {
        emptyState?.classList.add('hidden');
      }
    });
  });
</script>
