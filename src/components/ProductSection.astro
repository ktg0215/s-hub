        <path d="M13.5 10H10v4h3.5c1.103 0 2-.897 2-2s-.897-2-2-2zm0-2c2.206 0 4 1.794 4 4s-1.794 4-4 4H10v4H8V6h5.5z"/>
      </svg>
      <span>Featured on Product Hunt</span>
    </a>
  </div>

  <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-12">
    <div class="max-w-2xl">
      <h2 class="text-3xl md:text-5xl font-bold mb-4 tracking-tight text-white">Our Extension Lineup</h2>
      <p class="text-zinc-400 text-lg">
        High-utility tools built to solve specific digital friction. Lightweight, private, and powerful.
      </p>
    </div>

    <!-- Category Tabs -->
    <div class="flex flex-wrap gap-2" id="category-tabs">
      {categories.map((cat, idx) => (
        <button
          data-category={cat}
          class={`category-tab ${idx === 0 ? 'active' : ''}`}
        >
          {cat}
        </button>
      ))}
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8" id="products-grid">
    {products.map((product) => {
      const isComingSoon = product.priceType === 'Coming Soon';
      return (
        <div
          class={`product-card group p-6 flex flex-col h-full ${isComingSoon ? 'coming-soon' : ''}`}
          data-category={product.category}
        >
          <div class="flex items-start justify-between mb-4">
            <img
              src={product.icon}
              alt={`${product.name} Icon`}
              width="64"
              height="64"
              class="w-16 h-16 rounded-xl object-cover bg-zinc-800 shadow-lg"
              loading="lazy"
            />
            {product.reviewCount > 0 && (
              <div class="rating-badge">
                <svg class="w-3.5 h-3.5 fill-yellow-500" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <span>{product.rating.toFixed(1)} ({product.reviewCount})</span>
              </div>
            )}
          </div>

          <h3 class="text-xl font-bold mb-1 text-white group-hover:text-blue-400 transition-colors">
            {product.name}
          </h3>
          <div class="flex items-center gap-2 mb-3">
            <span class="text-[10px] text-zinc-400 uppercase tracking-[0.2em] font-bold">
              {product.category}
            </span>
            <span class="text-xs font-bold text-orange-400 px-3 py-1 bg-orange-500/10 rounded-full border border-orange-500/20 uppercase tracking-wider">
              {product.lang}
            </span>
          </div>

          <p class="text-zinc-400 text-sm leading-relaxed mb-8 flex-grow">
            {product.description}
          </p>

          <div class="mt-auto flex items-center justify-between border-t border-[#27272a] pt-5">
            <div class="flex flex-col">
              {product.priceType === 'Free' ? (
                <span class="price-badge-free">
                  {product.priceLabel ? `FREE / ${product.priceLabel}` : 'FREE'}
                </span>
              ) : product.priceType === 'Paid' ? (
                <span class="price-badge-paid">
                  {product.priceLabel}
                </span>
              ) : (
                <span class="price-badge-coming">
                  COMING SOON
                </span>
              )}
            </div>

            {isComingSoon ? (
              <button disabled class="btn-disabled flex items-center space-x-2">
                <span>Notify Me</span>
              </button>
            ) : (
              <a
                href={product.ctaLink}
                class={`${product.priceType === 'Free' ? 'btn-green' : 'btn-blue'} flex items-center space-x-2`}
              >
                <span>{product.priceType === 'Free' ? 'Get Free' : 'Get Now'}</span>
                <svg class="w-3.5 h-3.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      );
    })}
  </div>

  <div id="empty-state" class="hidden text-center py-24 bg-zinc-900/30 rounded-3xl border border-dashed border-zinc-800">
    <p class="text-zinc-400 font-medium italic">More tools are being developed in this category...</p>
  </div>
</section>

<script>
  const tabs = document.querySelectorAll('#category-tabs button');
  const products = document.querySelectorAll('#products-grid > div');
  const emptyState = document.getElementById('empty-state');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Update active tab
      tabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');

      const category = tab.dataset.category;
      let visibleCount = 0;

      products.forEach(product => {
        const productCategory = product.dataset.category;
        if (category === 'All' || productCategory === category) {
          product.classList.remove('hidden');
          visibleCount++;
        } else {
          product.classList.add('hidden');
        }
      });

      // Show/hide empty state
      if (visibleCount === 0) {
        emptyState?.classList.remove('hidden');
      } else {
        emptyState?.classList.add('hidden');
      }
    });
  });
</script>
