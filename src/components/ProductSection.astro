<section id="products" class="py-24 px-6 max-w-7xl mx-auto">
  <!-- Product Hunt -->
  <div class="flex justify-center mb-16">
    <a href="https://www.producthunt.com/@ktg0215" target="_blank" rel="noopener noreferrer" class="px-6 py-2 rounded-full border border-[#da552f]/30 bg-[#da552f]/10 flex items-center space-x-3 text-sm font-medium text-[#da552f] hover:bg-[#da552f]/20 transition-colors">
