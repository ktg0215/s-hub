<section id="home" class="relative pt-32 pb-20 px-6 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[600px] hero-gradient pointer-events-none opacity-50 blur-[100px]"></div>

  <div class="max-w-4xl mx-auto text-center relative z-10">
    <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6 text-gradient leading-tight">
      Simple Extensions.<br />Real Results.
    </h1>
    <p class="text-lg md:text-xl text-zinc-300 mb-10 max-w-2xl mx-auto">
      Crafted by an indie developer who believes software should solve problems, not create them. Tools that respect your time and privacy.
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="#products"
        class="group px-8 py-4 bg-blue-600 hover:bg-blue-500 text-white rounded-lg font-semibold flex items-center transition-all duration-200"
      >
        Explore Extensions
        <svg class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
      <a
        href="#about"
        class="px-8 py-4 bg-zinc-900 hover:bg-zinc-800 text-zinc-300 rounded-lg font-semibold border border-zinc-800 transition-colors"
      >
        Our Mission
      </a>
    </div>
  </div>
</section>
