---
import Layout from '../layouts/Layout.astro';

const sections = [
  {
    title: "1. Acceptance",
    content: "By installing and using our Chrome extensions, you agree to be bound by these Terms of Service. If you do not agree, please do not use our extensions."
  },
  {
    title: "2. As-Is Provision",
    content: "Our extensions are provided \"as is\" without warranty of any kind. We make no guarantees regarding availability, reliability, or functionality."
  },
  {
    title: "3. Limitation",
    content: "We shall not be liable for any indirect, incidental, special, or consequential damages arising from your use of our extensions."
  },
  {
    title: "4. Modifications",
    content: "We reserve the right to modify these Terms at any time. Continued use after changes constitutes acceptance."
  },
  {
    title: "5. Contact",
    content: "Questions? Contact us at ktg.shota@gmail.com",
    hasEmail: true
  }
];
---

<Layout
  title="Terms of Service"
  description="Terms of service for S-Hub Chrome extensions. Usage guidelines, limitations, and contact information."
  lang="en"
  noindex={true}
>
  <div class="container mx-auto px-6 py-32 max-w-4xl min-h-[60vh]">
    <h1 class="text-5xl md:text-8xl mb-12 font-vivid text-black drop-shadow-[4px_4px_0px_#00FF00]">
      TERMS
    </h1>

    <div class="bg-white p-8 border-4 border-black rounded-[20px] shadow-[8px_8px_0px_#000] space-y-8">
      {sections.map((section) => (
        <div>
          <h2 class="text-2xl font-vivid text-pink-500 mb-3">
            {section.title}
          </h2>
          <p class="text-gray-800 font-bold leading-relaxed">
            {section.hasEmail ? (
              <>
                Questions? Contact us at{" "}
                <a href="mailto:ktg.shota@gmail.com" class="text-green-500 hover:text-pink-500 transition-colors">
                  ktg.shota@gmail.com
                </a>
              </>
            ) : (
              section.content
            )}
          </p>
        </div>
      ))}
    </div>

    <a href="/" class="mt-12 inline-block font-vivid text-pink-500 text-xl hover:scale-110 transition-transform">
      &larr; Back to Home
    </a>
  </div>
</Layout>
