---
import Layout from '../layouts/Layout.astro';

const sections = [
  {
    title: "1. Acceptance",
    content: "By installing and using our Chrome extensions, you agree to be bound by these Terms of Service. If you do not agree, please do not use our extensions."
  },
  {
    title: "2. As-Is Provision",
    content: "Our extensions are provided \"as is\" without warranty of any kind. We make no guarantees regarding availability, reliability, or functionality."
  },
  {
    title: "3. Limitation",
    content: "We shall not be liable for any indirect, incidental, special, or consequential damages arising from your use of our extensions."
  },
  {
    title: "4. Modifications",
    content: "We reserve the right to modify these Terms at any time. Continued use after changes constitutes acceptance."
  },
  {
    title: "5. Contact",
    content: "Questions? Contact us at ktg.shota@gmail.com",
    hasEmail: true
  }
];
---

<Layout
  title="Terms of Service"
  description="Terms of service for S-Hub Chrome extensions. Usage guidelines, limitations, and contact information."
  lang="en"
  noindex={true}
>
  <div class="container mx-auto px-6 py-24 max-w-3xl min-h-[60vh]">
    <a href="/" class="inline-flex items-center gap-1 text-xs font-mono text-zinc-400 hover:text-sky-500 transition-colors mb-8">
      ‚Üê back
    </a>

    <h1 class="font-mono text-[11px] text-zinc-400 mb-6 tracking-wide">// terms of service</h1>

    <div class="product-card p-8 space-y-8">
      {sections.map((section, idx) => (
        <div class="fade-in" style={`animation-delay: ${idx * 80}ms`}>
          <h2 class="text-sm font-semibold text-zinc-900 mb-2">
            {section.title}
          </h2>
          <p class="text-sm text-zinc-600 leading-relaxed">
            {section.hasEmail ? (
              <>
                Questions? Contact us at{" "}
                <a href="mailto:ktg.shota@gmail.com" class="text-sky-500 hover:text-sky-600 transition-colors">
                  ktg.shota@gmail.com
                </a>
              </>
            ) : (
              section.content
            )}
          </p>
        </div>
      ))}
    </div>
  </div>
</Layout>
