---
import ExtensionLayout from '../../layouts/ExtensionLayout.astro';

const extension = {
  name: "TVer Plus",
  subtitle: "再生速度変更・PiP・ショートカット強化",
  tagline: "TVerの視聴体験を向上。2倍速以上の再生、ピクチャインピクチャ、便利なキーボードショートカットに対応。",
  price: "Free",
  status: "Available",
  chromeUrl: "https://chromewebstore.google.com/detail/ddhjonpmonmjgohicdipicodpmndnjll",
  category: "Media",
  lang: "JP",
  icon: "/ext-icons/tver-plus.webp",
  rating: 0,
  reviewCount: 0,
};

const overview = "TVerの視聴体験を向上させるChrome拡張機能です。2倍速以上の再生、ピクチャインピクチャ（PiP）、便利なキーボードショートカットに対応。無料版でも0.75x〜2.0xの速度調整が可能。Pro版では0.25x〜4.0xの細かい速度調整、PiP保護機能、マウスホイール操作、シアターモードなど充実した機能を利用できます。";

const features = [
  { title: "再生速度変更", desc: "スライダーとボタンで速度調整。Pro版は0.25x〜4.0x対応" },
  { title: "ピクチャインピクチャ", desc: "動画を浮遊ウィンドウで表示。PiP保護機能付き（Pro版）" },
  { title: "キーボードショートカット", desc: "S/Dで速度調整、Z/Xで10秒スキップ、Spaceで再生/停止" },
  { title: "マウスホイール操作 (Pro)", desc: "ホイールで10秒スキップ、Shift+ホイールで音量調整" },
  { title: "速度オーバーレイ", desc: "速度変更時に画面上に現在速度を表示" },
  { title: "クリック操作", desc: "ダブルクリックで全画面切替、クリックで再生/停止" },
];

const keyboardShortcuts = [
  { key: "S / D", desc: "再生速度を減速 / 加速" },
  { key: "Z / X", desc: "10秒巻き戻し / 早送り" },
  { key: "Space", desc: "再生 / 一時停止" },
  { key: "P", desc: "ピクチャインピクチャ切替" },
  { key: "R", desc: "速度をリセット（1.0x）" },
];

const targetUsers = [
  "TVerで効率的にドラマ・アニメを視聴したい方",
  "ながら見で作業しながら動画を楽しみたい方",
  "キーボード操作で快適に動画を操作したい方",
  "PiPで小窓表示しながらマルチタスクしたい方",
];

const screenshots = [
  "/screenshots/tver-plus/screenshot-01.png",
  "/screenshots/tver-plus/screenshot-02.png",
  "/screenshots/tver-plus/screenshot-03.png",
  "/screenshots/tver-plus/screenshot-04.png",
  "/screenshots/tver-plus/screenshot-05.png",
];

const relatedProducts = [
  { name: "Shorts Killer", category: "Wellbeing", link: "/extensions/shorts-killer", icon: "/ext-icons/shorts-killer.webp" },
  { name: "ZenRead", category: "Productivity", link: "/extensions/zenread", icon: "/ext-icons/ZenRead.webp" },
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: "TVer Plus",
  description: extension.tagline,
  applicationCategory: "BrowserApplication",
  operatingSystem: "Chrome",
  offers: { "@type": "Offer", price: "0", priceCurrency: "JPY" },
  author: { "@type": "Organization", name: "S-Hub", url: "https://dev-tools-hub.xyz" },
};
---

<ExtensionLayout
  extension={extension}
  overview={overview}
  features={features}
  targetUsers={targetUsers}
  screenshots={screenshots}
  relatedProducts={relatedProducts}
  keyboardShortcuts={keyboardShortcuts}
  softwareSchema={softwareSchema}
  seoTitle={`${extension.name} - TVer再生速度変更・PiP対応`}
  seoDescription="TVerの視聴体験を向上。2倍速以上の再生、PiP、キーボードショートカットに対応。"
  seoKeywords="TVer, 再生速度, ピクチャインピクチャ, Chrome拡張機能, 動画プレイヤー"
  ctaTitle="TVerをもっと快適に"
  ctaDescription="再生速度変更とPiPで、効率的な視聴体験を。"
/>
