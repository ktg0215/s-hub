---
import Layout from '../../layouts/Layout.astro';

const extension = {
  name: "Japanese Font Finder",
  subtitle: "日本語フォント検索",
  tagline: "Webページ上のフォント情報を瞬時に検出。日本語フォントに完全対応。",
  price: "Free",
  status: "Available",
  chromeUrl: "",
  category: "Productivity",
  lang: "JP",
  icon: "/ext-icons/japanese-font-finder.png",
  rating: 0,
  reviewCount: 0,
};

const overview = "Webページ上のフォント情報を瞬時に検出するChrome拡張機能です。游ゴシック、ヒラギノ、モリサワなど日本語フォントを正確に識別し、フォントサイズ、ウェイト、行間、カラーコードなど必要な情報をワンクリックで取得できます。Manifest V3対応で軽量・高速動作。データはすべてローカル保存され、外部送信は一切ありません。";

const features = [
  { title: "フォント名の検出", desc: "日本語フォント完全対応。ホバーで即座にフォント情報を表示" },
  { title: "詳細情報の取得", desc: "フォントサイズ・ウェイト・行間・カラーコード（HEX/RGB）を表示" },
  { title: "日本語フォント特化", desc: "游ゴシック/游明朝、ヒラギノ、メイリオ、Noto Sans JP、源ノ角ゴシックに対応" },
  { title: "Webフォントサービス検出", desc: "Google Fonts、Adobe Fonts、TypeSquare、FONTPLUSを自動検出" },
  { title: "ブックマーク機能", desc: "気に入ったフォントをお気に入り保存。検出履歴も確認可能" },
  { title: "ページ全体スキャン", desc: "ページで使用されているフォント一覧を表示。ワンクリックでGoogle検索" },
];

const targetUsers = [
  "Webデザイナー",
  "フロントエンドエンジニア",
  "グラフィックデザイナー",
  "タイポグラフィに興味のある方",
];

const screenshots = [
  "/screenshots/japanese-font-finder/resized_1280x800_1.png",
  "/screenshots/japanese-font-finder/resized_1280x800_2.png",
  "/screenshots/japanese-font-finder/resized_1280x800_3.png",
];

const relatedProducts = [
  { name: "PromptStash", category: "Productivity", link: "/extensions/promptstash", icon: "/ext-icons/promptstash.png" },
  { name: "X Detox", category: "Wellbeing", link: "/extensions/x-detox", icon: "/ext-icons/x-detox.png" },
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Japanese Font Finder",
  "description": extension.tagline,
  "applicationCategory": "BrowserApplication",
  "operatingSystem": "Chrome",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "author": {
    "@type": "Organization",
    "name": "S-Hub",
    "url": "https://dev-tools-hub.xyz"
  },
  "screenshot": "https://dev-tools-hub.xyz/screenshots/japanese-font-finder/resized_1280x800_1.png"
};
---

<Layout
  title={`${extension.name} - 日本語フォント検索 Chrome拡張機能`}
  description="Webページ上のフォント情報を瞬時に検出するChrome拡張機能。游ゴシック、ヒラギノなど日本語フォントに完全対応。無料で使えます。"
  keywords="font finder, 日本語フォント, フォント検出, chrome extension, web font, 游ゴシック, ヒラギノ, typography"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
  </Fragment>

  <div class="pt-24 pb-16">
    <!-- Hero Section with CTA -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <a href="/" class="inline-flex items-center text-zinc-400 hover:text-white mb-8 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Home
      </a>

      <div class="flex flex-col md:flex-row gap-8 items-start">
        <img
          src={extension.icon}
          alt={`${extension.name} icon`}
          class="w-24 h-24 rounded-2xl bg-zinc-800 shadow-lg"
        />
        <div class="flex-1">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <span class="text-xs font-bold text-blue-400 px-3 py-1 bg-blue-500/10 rounded-full border border-blue-500/20 uppercase tracking-wider">
              {extension.category}
            </span>
            <span class="text-xs font-bold text-green-400 px-3 py-1 bg-green-500/10 rounded-full border border-green-500/20 uppercase tracking-wider">
              {extension.status}
            </span>
            <span class="text-xs font-bold text-orange-400 px-3 py-1 bg-orange-500/10 rounded-full border border-orange-500/20 uppercase tracking-wider">
              {extension.lang}
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">
            {extension.name}
          </h1>
          <p class="text-xl text-zinc-400 mb-4">{extension.subtitle}</p>

          <div class="flex items-center gap-4 mb-6">
            <span class="price-badge-free">{extension.price}</span>
            {extension.rating > 0 && (
              <div class="rating-badge">
                <svg class="w-4 h-4 fill-yellow-500" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <span>{extension.rating.toFixed(1)} ({extension.reviewCount} reviews)</span>
              </div>
            )}
          </div>

          <p class="text-zinc-300 mb-8">{extension.tagline}</p>

          <!-- CTA Buttons at Top -->
          <div class="flex flex-wrap gap-4">
            {extension.chromeUrl ? (
              <a href={extension.chromeUrl} target="_blank" rel="noopener noreferrer" class="btn-green flex items-center gap-2 px-6 py-3">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C8.21 0 4.831 1.757 2.632 4.501l3.953 6.848A5.454 5.454 0 0 1 12 6.545h10.691A12 12 0 0 0 12 0zM1.931 5.47A11.943 11.943 0 0 0 0 12c0 6.012 4.42 10.991 10.189 11.864l3.953-6.847a5.45 5.45 0 0 1-6.865-2.29zm13.342 2.166a5.446 5.446 0 0 1 1.45 7.09l.002.001h-.002l-3.952 6.848a12.014 12.014 0 0 0 9.229-9.605zM12 16.364a4.364 4.364 0 1 1 0-8.728 4.364 4.364 0 0 1 0 8.728z"/>
                </svg>
                Add to Chrome
              </a>
            ) : (
              <span class="btn-disabled flex items-center gap-2 px-6 py-3 cursor-not-allowed">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C8.21 0 4.831 1.757 2.632 4.501l3.953 6.848A5.454 5.454 0 0 1 12 6.545h10.691A12 12 0 0 0 12 0zM1.931 5.47A11.943 11.943 0 0 0 0 12c0 6.012 4.42 10.991 10.189 11.864l3.953-6.847a5.45 5.45 0 0 1-6.865-2.29zm13.342 2.166a5.446 5.446 0 0 1 1.45 7.09l.002.001h-.002l-3.952 6.848a12.014 12.014 0 0 0 9.229-9.605zM12 16.364a4.364 4.364 0 1 1 0-8.728 4.364 4.364 0 0 1 0 8.728z"/>
                </svg>
                Coming Soon
              </span>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Screenshots Carousel -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">Screenshots</h2>
      <div class="relative">
        <!-- Carousel Container -->
        <div class="overflow-hidden rounded-xl border border-zinc-800">
          <div id="carousel" class="flex transition-transform duration-300 ease-in-out">
            {screenshots.map((src, i) => (
              <div class="w-full flex-shrink-0">
                <img
                  src={src}
                  alt={`${extension.name} screenshot ${i + 1}`}
                  class="w-full"
                  loading="lazy"
                />
              </div>
            ))}
          </div>
        </div>

        <!-- Navigation Buttons -->
        <button
          id="prev-btn"
          class="absolute left-2 top-1/2 -translate-y-1/2 w-10 h-10 bg-black/60 hover:bg-black/80 rounded-full flex items-center justify-center text-white transition-colors"
          aria-label="Previous screenshot"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        <button
          id="next-btn"
          class="absolute right-2 top-1/2 -translate-y-1/2 w-10 h-10 bg-black/60 hover:bg-black/80 rounded-full flex items-center justify-center text-white transition-colors"
          aria-label="Next screenshot"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>

        <!-- Indicators -->
        <div class="flex justify-center gap-2 mt-4">
          {screenshots.map((_, i) => (
            <button
              class="carousel-dot w-2 h-2 rounded-full bg-zinc-600 transition-colors"
              data-index={i}
              aria-label={`Go to screenshot ${i + 1}`}
            />
          ))}
        </div>
      </div>
    </section>

    <script>
      const carousel = document.getElementById('carousel');
      const prevBtn = document.getElementById('prev-btn');
      const nextBtn = document.getElementById('next-btn');
      const dots = document.querySelectorAll('.carousel-dot');
      const totalSlides = dots.length;
      let currentIndex = 0;

      function updateCarousel() {
        if (carousel) {
          carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
        }
        dots.forEach((dot, i) => {
          dot.classList.toggle('bg-blue-500', i === currentIndex);
          dot.classList.toggle('bg-zinc-600', i !== currentIndex);
        });
      }

      prevBtn?.addEventListener('click', () => {
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateCarousel();
      });

      nextBtn?.addEventListener('click', () => {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
      });

      dots.forEach((dot, i) => {
        dot.addEventListener('click', () => {
          currentIndex = i;
          updateCarousel();
        });
      });

      // Initialize
      updateCarousel();
    </script>

    <!-- Overview -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">Overview</h2>
      <p class="text-zinc-400 text-lg leading-relaxed">
        {overview}
      </p>
    </section>

    <!-- Features -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {features.map((feature) => (
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
              <div>
                <h3 class="font-semibold text-white mb-1">{feature.title}</h3>
                <p class="text-zinc-400 text-sm">{feature.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Recommended For -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">Recommended For</h2>
      <ul class="space-y-4">
        {targetUsers.map((user) => (
          <li class="flex items-start gap-4 text-zinc-400">
            <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>{user}</span>
          </li>
        ))}
      </ul>
    </section>

    <!-- Install Section (Main CTA) -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <div class="bg-gradient-to-r from-blue-600/20 to-green-600/20 border border-zinc-800 rounded-2xl p-8 text-center">
        <h2 class="text-2xl font-bold text-white mb-4">フォント情報を瞬時に取得</h2>
        <p class="text-zinc-400 mb-8">Japanese Font Finderをインストールして、Webデザインの効率を上げましょう。</p>
        <div class="flex flex-wrap justify-center gap-4">
          {extension.chromeUrl ? (
            <a href={extension.chromeUrl} target="_blank" rel="noopener noreferrer" class="btn-green flex items-center gap-2 px-8 py-4 text-lg">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C8.21 0 4.831 1.757 2.632 4.501l3.953 6.848A5.454 5.454 0 0 1 12 6.545h10.691A12 12 0 0 0 12 0zM1.931 5.47A11.943 11.943 0 0 0 0 12c0 6.012 4.42 10.991 10.189 11.864l3.953-6.847a5.45 5.45 0 0 1-6.865-2.29zm13.342 2.166a5.446 5.446 0 0 1 1.45 7.09l.002.001h-.002l-3.952 6.848a12.014 12.014 0 0 0 9.229-9.605zM12 16.364a4.364 4.364 0 1 1 0-8.728 4.364 4.364 0 0 1 0 8.728z"/>
              </svg>
              Add to Chrome - It's Free
            </a>
          ) : (
            <span class="btn-disabled flex items-center gap-2 px-8 py-4 text-lg cursor-not-allowed">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C8.21 0 4.831 1.757 2.632 4.501l3.953 6.848A5.454 5.454 0 0 1 12 6.545h10.691A12 12 0 0 0 12 0zM1.931 5.47A11.943 11.943 0 0 0 0 12c0 6.012 4.42 10.991 10.189 11.864l3.953-6.847a5.45 5.45 0 0 1-6.865-2.29zm13.342 2.166a5.446 5.446 0 0 1 1.45 7.09l.002.001h-.002l-3.952 6.848a12.014 12.014 0 0 0 9.229-9.605zM12 16.364a4.364 4.364 0 1 1 0-8.728 4.364 4.364 0 0 1 0 8.728z"/>
              </svg>
              Coming Soon
            </span>
          )}
        </div>
      </div>
    </section>

    <!-- Related Extensions -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">You might also like</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {relatedProducts.map((product) => (
          <a href={product.link} class="product-card group p-6 flex items-center gap-4">
            <img src={product.icon} alt={product.name} class="w-12 h-12 rounded-xl bg-zinc-800" />
            <div>
              <h3 class="font-semibold text-white group-hover:text-blue-400 transition-colors">{product.name}</h3>
              <p class="text-xs text-zinc-400 uppercase tracking-wider">{product.category}</p>
            </div>
            <svg class="w-5 h-5 text-zinc-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        ))}
      </div>
    </section>
  </div>
</Layout>
