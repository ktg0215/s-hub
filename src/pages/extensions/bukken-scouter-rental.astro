---
import ExtensionLayout from '../../layouts/ExtensionLayout.astro';

const extension = {
  name: "物件スカウター（賃貸版）",
  subtitle: "賃貸物件探しをスマートに",
  tagline: "その家賃、本当に適正？SUUMOの物件探しを、もっとスマートに。",
  price: "Free",
  status: "Available",
  chromeUrl: "https://chromewebstore.google.com/detail/hnfccaipmcmbolhpdklolimlnjloknld",
  edgeUrl: "https://microsoftedge.microsoft.com/addons/detail/bgfaghgipakiodckkdekhfkmiimieclh",
  category: "Real Estate",
  lang: "JP",
  icon: "/ext-icons/bukken-scouter-rental.webp",
  rating: 0,
  reviewCount: 0,
};

const overview = "物件スカウター（賃貸版）は、SUUMOで賃貸物件を探す際の比較・分析を効率化するChrome拡張機能です。物件ページを開くだけで㎡単価を自動計算。バラバラに表示される敷金・礼金・仲介手数料などを合計して初期費用を一発表示。さらにAI賃料判定で「お得/適正/割高」を判定し、相場感のない物件探しをサポートします。";

const features = [
  { title: "㎡単価の自動計算", desc: "物件の広さと家賃のコスパを一目で把握" },
  { title: "初期費用の一括計算", desc: "敷金・礼金・仲介手数料・前家賃・保証料をまとめて表示" },
  { title: "年間コスト・2年間総コスト", desc: "更新料を含めた実質コストで長期比較" },
  { title: "お気に入り保存 & 比較表", desc: "気になる物件を保存して並べて比較" },
  { title: "CSV / Excel エクスポート", desc: "物件リストをファイル出力、共有・検討に便利" },
  { title: "AI賃料判定", desc: "お得 / 適正 / 割高 をAIが自動判定" },
];

const targetUsers = [
  "初めての一人暮らしで相場が分からない方",
  "転勤・引っ越しで効率的に物件を探したい方",
  "複数物件をじっくり比較検討したい方",
  "初期費用の総額を事前に把握したい方",
];

const screenshots = [
  "/screenshots/bukken-scouter-rental/screenshot-1.png",
  "/screenshots/bukken-scouter-rental/screenshot-2.png",
  "/screenshots/bukken-scouter-rental/screenshot-3.png",
  "/screenshots/bukken-scouter-rental/screenshot-4.png",
];

const relatedProducts = [
  { name: "物件スカウター（購入版）", category: "Real Estate", link: "/extensions/bukken-scouter-purchase", icon: "/ext-icons/bukken-scouter-purchase.webp" },
  { name: "Arbitra", category: "E-Commerce", link: "/extensions/arbitra", icon: "/ext-icons/Arbitra.webp" },
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: "物件スカウター（賃貸版）",
  description: extension.tagline,
  applicationCategory: "BrowserApplication",
  operatingSystem: "Chrome, Edge",
  offers: { "@type": "Offer", price: "0", priceCurrency: "JPY" },
  author: { "@type": "Organization", name: "S-Hub", url: "https://dev-tools-hub.xyz" },
  downloadUrl: extension.chromeUrl,
};
---

<ExtensionLayout
  extension={extension}
  overview={overview}
  features={features}
  targetUsers={targetUsers}
  screenshots={screenshots}
  relatedProducts={relatedProducts}
  softwareSchema={softwareSchema}
  seoTitle={`${extension.name} - SUUMO賃貸物件比較ツール`}
  seoDescription="SUUMOの賃貸物件を効率比較。㎡単価・初期費用・年間コストを自動計算、AI賃料判定付き。"
  seoKeywords="SUUMO, 賃貸, 物件比較, Chrome拡張機能, ㎡単価, 初期費用, AI賃料判定"
  ogImage="/images/og-bukken-scouter-rental.webp"
  ctaTitle="賢い物件探しを始めよう"
  ctaDescription="物件スカウターで、データに基づいた物件選びを。"
/>
