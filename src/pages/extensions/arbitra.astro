---
import ExtensionLayout from '../../layouts/ExtensionLayout.astro';

const extension = {
  name: "Arbitra",
  subtitle: "せどり価格比較ツール",
  tagline: "Amazon、メルカリ、ヤフオクの価格を一括比較。利益計算を瞬時に。",
  price: "Free",
  status: "Available",
  chromeUrl: "https://chromewebstore.google.com/detail/arbitra-%E3%81%9B%E3%81%A9%E3%82%8A%E4%BE%A1%E6%A0%BC%E6%AF%94%E8%BC%83%E3%83%84%E3%83%BC%E3%83%AB/bincnlodgkpmmihbdoknndbncjfghpcj",
  edgeUrl: "https://microsoftedge.microsoft.com/addons/detail/arbitra-%E3%81%9B%E3%81%A9%E3%82%8A%E4%BE%A1%E6%A0%BC%E6%AF%94%E8%BC%83%E3%83%84%E3%83%BC%E3%83%AB/lajjanfkakbjmfhklflgdmnbdmdnkiok",
  category: "E-Commerce",
  lang: "JP",
  icon: "/ext-icons/Arbitra.webp",
  rating: 5.0,
  reviewCount: 1,
};

const overview = "Arbitraは、せどらー・転売ヤーのための究極の価格比較ツールです。ワンクリックでAmazon、メルカリ、ヤフオクの価格を一括比較し、利益の出る商品を瞬時に発見できます。プラットフォーム手数料、送料、利益率を自動計算する利益計算機能を搭載。賢い仕入れ判断を数秒で行えます。";

const features = [
  { title: "クロスプラットフォーム価格比較", desc: "Amazon、メルカリ、ヤフオクを一目で比較" },
  { title: "1日5回まで検索", desc: "カジュアルなせどらーに最適" },
  { title: "利益計算機能", desc: "手数料・送料込みで自動計算" },
  { title: "キーワード編集", desc: "検索精度を上げて正確なマッチング" },
  { title: "価格統計", desc: "最安値・最高値・中央値を表示" },
  { title: "検索履歴", desc: "直近10件の検索履歴を保存" },
  { title: "無制限検索 (Pro)", desc: "1日の検索回数制限なし" },
  { title: "価格下落アラート (Pro)", desc: "目標価格に下がったら通知" },
  { title: "CSVエクスポート (Pro)", desc: "スプレッドシート分析用にデータ出力" },
];

const targetUsers = [
  "利益率を最大化したいせどらー",
  "日本国内でオンラインアービトラージを行う方",
  "商品を仕入れるEC事業者",
  "副業で転売ビジネスを探求する方",
];

const screenshots = [
  "/screenshots/arbitra/screenshot-01.png",
  "/screenshots/arbitra/screenshot-02.png",
  "/screenshots/arbitra/screenshot-03.png",
  "/screenshots/arbitra/screenshot-04.png",
  "/screenshots/arbitra/screenshot-05.png",
];

const relatedProducts = [
  { name: "Rakuten Sellers Analytics", category: "E-Commerce", link: "/extensions/rakuten-sellers-analytics/", icon: "/ext-icons/rakuten-sellers-analytics.webp" },
  { name: "Kaitoki", category: "E-Commerce", link: "/extensions/kaitoki/", icon: "/ext-icons/Kaitoki.png" },
  { name: "PromptStash", category: "Productivity", link: "/extensions/promptstash/", icon: "/ext-icons/promptstash.webp" },
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: "Arbitra",
  description: extension.tagline,
  applicationCategory: "BrowserApplication",
  operatingSystem: "Chrome, Edge",
  offers: { "@type": "Offer", price: "0", priceCurrency: "USD" },
  aggregateRating: { "@type": "AggregateRating", ratingValue: extension.rating.toString(), ratingCount: extension.reviewCount.toString() },
  author: { "@type": "Organization", name: "S-Hub", url: "https://dev-tools-hub.xyz" },
  downloadUrl: extension.chromeUrl,
  screenshot: "https://dev-tools-hub.xyz/screenshots/arbitra/screenshot-1.png"
};
---

<ExtensionLayout
  extension={extension}
  overview={overview}
  features={features}
  targetUsers={targetUsers}
  screenshots={screenshots}
  relatedProducts={relatedProducts}
  softwareSchema={softwareSchema}
  seoTitle={`${extension.name} - せどり価格比較ツール`}
  seoDescription="Amazon、メルカリ、ヤフオクの価格を一括比較できる無料Chrome拡張機能。利益計算機能搭載。"
  seoKeywords="価格比較, せどりツール, amazon, メルカリ, ヤフオク, 転売, chrome拡張機能"
  ogImage="/images/og-arbitra.webp"
  ctaTitle="せどりを効率化しよう"
  ctaDescription="Arbitraで利益の出る商品を瞬時に発見。"
/>
