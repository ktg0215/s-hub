---
import ExtensionLayout from '../../layouts/ExtensionLayout.astro';

const extension = {
  name: "X Detox",
  subtitle: "Hide For You & Trends",
  tagline: "Break free from X (Twitter) algorithms and reclaim your timeline",
  price: "Free",
  status: "Available",
  chromeUrl: "https://chromewebstore.google.com/detail/x-detox-hide-for-you-tren/hlaankalmjmaefkcabjcfagnkfhlkpce",
  category: "Digital Wellbeing",
  lang: "EN",
  icon: "/ext-icons/x-detox.webp",
  rating: 4.8,
  reviewCount: 15,
};

const overview = "The 'For You' timeline and trends on X (Twitter) are designed to capture your attention with algorithm-driven content. X Detox removes these distractions, showing only posts from people you actually follow. Take back control of your social media experience.";

const features = [
  { title: "Hide 'For You' tab", desc: "Remove the algorithmic timeline completely" },
  { title: "Hide trends section", desc: "No more trending topics distracting you" },
  { title: "Hide 'Who to follow' suggestions", desc: "Stop unwanted follow recommendations" },
  { title: "Reduce promotional posts", desc: "Cleaner, more focused feed" },
  { title: "Custom filter settings (Pro)", desc: "Fine-tune exactly what you want to hide" },
  { title: "Mute specific keywords (Pro)", desc: "Block content containing certain words" },
  { title: "Advanced display controls (Pro)", desc: "Complete control over your X experience" },
];

const targetUsers = [
  "People who want to reduce time spent on X",
  "Those who only want to see posts from people they follow",
  "Anyone concerned about algorithmic manipulation",
];

const screenshots = [
  "/screenshots/x-detox/screenshot-1.png",
];

const relatedProducts = [
  { name: "Shorts Killer", category: "Wellbeing", link: "/extensions/shorts-killer/", icon: "/ext-icons/shorts-killer.webp" },
  { name: "PromptStash", category: "Productivity", link: "/extensions/promptstash/", icon: "/ext-icons/promptstash.webp" },
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: "X Detox",
  description: extension.tagline,
  applicationCategory: "BrowserApplication",
  operatingSystem: "Chrome",
  offers: { "@type": "Offer", price: "0", priceCurrency: "USD" },
  aggregateRating: { "@type": "AggregateRating", ratingValue: extension.rating.toString(), ratingCount: extension.reviewCount.toString() },
  author: { "@type": "Organization", name: "S-Hub", url: "https://dev-tools-hub.xyz" },
  downloadUrl: extension.chromeUrl,
  screenshot: "https://dev-tools-hub.xyz/screenshots/x-detox/screenshot-1.png"
};
---

<ExtensionLayout
  extension={extension}
  overview={overview}
  features={features}
  targetUsers={targetUsers}
  screenshots={screenshots}
  relatedProducts={relatedProducts}
  softwareSchema={softwareSchema}
  seoTitle="X Detox - Clean Up X/Twitter"
  seoDescription="Free Chrome extension to hide For You tab, trends, and algorithmic content from X (Twitter)."
  seoKeywords="x detox, twitter cleaner, hide for you tab, chrome extension, digital wellbeing"
  ogImage="/images/og-x-detox.webp"
  ctaTitle="Take Back Your Timeline"
  ctaDescription="Install X Detox and see only what matters."
  productHuntUrl="https://www.producthunt.com/products/x-detox?embed=true&utm_source=badge-featured&utm_medium=badge&utm_campaign=badge-x-detox"
  productHuntImage="https://api.producthunt.com/widgets/embed-image/v1/featured.svg?post_id=1059490&theme=light"
/>
