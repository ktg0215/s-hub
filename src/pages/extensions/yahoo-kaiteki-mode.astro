---
import ExtensionLayout from '../../layouts/ExtensionLayout.astro';

const extension = {
  name: "Yahoo快適モード",
  subtitle: "Yahoo! JAPANニュースフィルター",
  tagline: "もう「こたつ記事」にイライラしない。Yahoo!ニュースを快適に。",
  price: "Free",
  status: "Available",
  chromeUrl: "https://chromewebstore.google.com/detail/oeinpjbbingpakilcejimbibfcbbfkkg",
  edgeUrl: "https://microsoftedge.microsoft.com/addons/detail/afilbbheeabeiohpodomgoegkienjgfj",
  category: "Wellbeing",
  lang: "JP",
  icon: "/ext-icons/yahoo-kaiteki-mode.webp",
  rating: 0,
  reviewCount: 0,
};

const overview = "Yahoo快適モードは、Yahoo! JAPANのニュース閲覧体験を劇的に改善するChrome拡張機能です。「ネットで話題」「批判殺到」などの煽りタイトル、SNSのコピペだけで構成された低品質な「こたつ記事」、週刊誌のゴシップ記事をフィルタリング。本当に価値のあるニュースだけを読むことができます。";

const features = [
  { title: "キーワードフィルタリング", desc: "指定したキーワードを含む記事を非表示" },
  { title: "ソースブロック", desc: "特定メディアの記事を完全ブロック" },
  { title: "プリセットフィルター", desc: "炎上系/週刊誌系/まとめ系をワンクリックで除外" },
  { title: "フィルター統計", desc: "今日何件フィルターしたか確認" },
  { title: "こたつ記事AI検出 (Pro)", desc: "低品質記事を自動で検出・非表示" },
  { title: "無制限ブロックリスト (Pro)", desc: "メディアブロックの上限解除" },
  { title: "詳細統計ダッシュボード (Pro)", desc: "週間/月間のグラフ表示" },
];

const targetUsers = [
  "Yahoo!ニュースを毎日チェックする方",
  "煽りタイトルや炎上記事にうんざりしている方",
  "質の高いニュースだけを読みたい方",
  "ニュース閲覧の時間を効率化したい方",
];

const screenshots = [
  "/screenshots/yahoo-kaiteki-mode/screenshot-01.png",
  "/screenshots/yahoo-kaiteki-mode/screenshot-02.png",
  "/screenshots/yahoo-kaiteki-mode/screenshot-03.png",
  "/screenshots/yahoo-kaiteki-mode/screenshot-04.png",
  "/screenshots/yahoo-kaiteki-mode/screenshot-05.png",
];

const relatedProducts = [
  { name: "X Detox", category: "Wellbeing", link: "/extensions/x-detox", icon: "/ext-icons/x-detox.webp" },
  { name: "Shorts Killer", category: "Wellbeing", link: "/extensions/shorts-killer", icon: "/ext-icons/shorts-killer.webp" },
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: "Yahoo快適モード",
  description: extension.tagline,
  applicationCategory: "BrowserApplication",
  operatingSystem: "Edge",
  offers: { "@type": "Offer", price: "0", priceCurrency: "JPY" },
  author: { "@type": "Organization", name: "S-Hub", url: "https://dev-tools-hub.xyz" },
};
---

<ExtensionLayout
  extension={extension}
  overview={overview}
  features={features}
  targetUsers={targetUsers}
  screenshots={screenshots}
  relatedProducts={relatedProducts}
  softwareSchema={softwareSchema}
  seoTitle={`${extension.name} - Yahoo!ニュース快適フィルター`}
  seoDescription="Yahoo!ニュースの低品質記事を自動フィルタリング。煽り記事やこたつ記事を非表示に。"
  seoKeywords="Yahoo ニュース, フィルター, こたつ記事, 炎上, Chrome拡張機能, ニュースブロック"
  ctaTitle="快適なニュース体験を"
  ctaDescription="質の高いニュースだけを読む、新しい習慣を。"
/>
