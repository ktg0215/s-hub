---
import Layout from '../../layouts/Layout.astro';

const extension = {
  name: "DataPick",
  subtitle: "No-code Web Scraping",
  tagline: "Extract data from any website without writing a single line of code",
  price: "$19",
  status: "Available",
  chromeUrl: "https://chromewebstore.google.com/detail/datapick/",
  category: "Productivity",
  lang: "EN",
  icon: "/icons/datapick.png",
  rating: 0,
  reviewCount: 0,
};

const overview = "Tired of copying and pasting data from websites one by one? DataPick lets you scrape any website with just a few clicks. Simply click on the data you want, and DataPick automatically finds all similar elements on the page. Export your data to CSV, Excel, or Google Sheets instantly.\n\nNo coding skills required. No complex setup. Just point, click, and export.";

const features = [
  { title: "Point & Click Selection", desc: "Simply click on the data you want to extract" },
  { title: "Smart Element Detection", desc: "Automatically finds all similar items on the page" },
  { title: "Multiple Export Options", desc: "CSV, Excel, JSON, and Google Sheets" },
  { title: "Live Data Preview", desc: "See your extracted data in real-time before exporting" },
  { title: "Save Scraping Recipes", desc: "Save your setup and reuse it anytime" },
];

const proFeatures = [
  "Unlimited exports (Free: 5 rows)",
  "Google Sheets direct integration",
  "Multi-page scraping with pagination",
  "Save and reuse scraping recipes",
  "JSON export format",
  "Duplicate row detection",
  "Advanced data cleaning",
];

const targetUsers = [
  "E-commerce sellers tracking competitor prices",
  "Sales teams building lead lists from directories",
  "Recruiters extracting candidate information",
  "Researchers gathering data for analysis",
  "Anyone who regularly copies data from websites",
];

const screenshots = [
  "/screenshots/datapick/screenshot-1.png",
  "/screenshots/datapick/screenshot-2.png",
  "/screenshots/datapick/screenshot-3.png",
];

const relatedProducts = [
  { name: "PromptStash", category: "Productivity", link: "/extensions/promptstash", icon: "/icons/promptstash.png" },
  { name: "Arbitra", category: "E-Commerce", link: "/extensions/arbitra", icon: "/icons/Arbitra.png" },
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "DataPick",
  "description": extension.tagline,
  "applicationCategory": "BrowserApplication",
  "operatingSystem": "Chrome",
  "offers": {
    "@type": "Offer",
    "price": "19",
    "priceCurrency": "USD"
  },
  "author": {
    "@type": "Organization",
    "name": "S-Hub",
    "url": "https://s-hub.pages.dev"
  },
  "downloadUrl": extension.chromeUrl,
  "screenshot": "https://s-hub.pages.dev/screenshots/datapick/screenshot-1.png"
};
---

<Layout
  title={`${extension.name} - No-code Web Scraping`}
  description="Extract data from any website with just a few clicks. Export to CSV, Excel, or Google Sheets. No coding required. $19 one-time payment."
  keywords="web scraping, data extraction, no-code scraper, csv export, google sheets, chrome extension, productivity"
  ogImage="/screenshots/datapick/screenshot-1.png"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
  </Fragment>

  <div class="pt-24 pb-16">
    <!-- Hero Section with CTA -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <a href="/" class="inline-flex items-center text-zinc-400 hover:text-white mb-8 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Home
      </a>

      <div class="flex flex-col md:flex-row gap-8 items-start">
        <img
          src={extension.icon}
          alt={`${extension.name} icon`}
          class="w-24 h-24 rounded-2xl bg-zinc-800 shadow-lg"
        />
        <div class="flex-1">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <span class="text-xs font-bold text-blue-400 px-3 py-1 bg-blue-500/10 rounded-full border border-blue-500/20 uppercase tracking-wider">
              {extension.category}
            </span>
            <span class="text-xs font-bold text-green-400 px-3 py-1 bg-green-500/10 rounded-full border border-green-500/20 uppercase tracking-wider">
              {extension.status}
            </span>
            <span class="text-xs font-bold text-orange-400 px-3 py-1 bg-orange-500/10 rounded-full border border-orange-500/20 uppercase tracking-wider">
              {extension.lang}
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">
            {extension.name}
          </h1>
          <p class="text-xl text-zinc-400 mb-4">{extension.subtitle}</p>

          <div class="flex items-center gap-4 mb-6">
            <span class="price-badge-paid">{extension.price} One-time</span>
            {extension.reviewCount > 0 ? (
              <div class="rating-badge">
                <svg class="w-4 h-4 fill-yellow-500" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <span>{extension.rating.toFixed(1)} ({extension.reviewCount} reviews)</span>
              </div>
            ) : (
              <span class="text-xs font-bold text-zinc-400 px-3 py-1 bg-zinc-800 rounded-full border border-zinc-700 uppercase tracking-wider">
                New
              </span>
            )}
          </div>

          <p class="text-zinc-300 mb-8">{extension.tagline}</p>

          <!-- CTA Buttons at Top -->
          <div class="flex flex-wrap gap-4">
            <a href={extension.chromeUrl} target="_blank" rel="noopener noreferrer" class="btn-blue flex items-center gap-2 px-6 py-3">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C8.21 0 4.831 1.757 2.632 4.501l3.953 6.848A5.454 5.454 0 0 1 12 6.545h10.691A12 12 0 0 0 12 0zM1.931 5.47A11.943 11.943 0 0 0 0 12c0 6.012 4.42 10.991 10.189 11.864l3.953-6.847a5.45 5.45 0 0 1-6.865-2.29zm13.342 2.166a5.446 5.446 0 0 1 1.45 7.09l.002.001h-.002l-3.952 6.848a12.014 12.014 0 0 0 9.229-9.605zM12 16.364a4.364 4.364 0 1 1 0-8.728 4.364 4.364 0 0 1 0 8.728z"/>
              </svg>
              Add to Chrome - $19
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Screenshots Carousel -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">Screenshots</h2>
      <div class="relative">
        <div class="overflow-hidden rounded-xl border border-zinc-800">
          <div id="carousel-datapick" class="flex transition-transform duration-300 ease-in-out">
            {screenshots.map((src, i) => (
              <div class="w-full flex-shrink-0">
                <img
                  src={src}
                  alt={`${extension.name} screenshot ${i + 1}`}
                  class="w-full"
                  loading="lazy"
                />
              </div>
            ))}
          </div>
        </div>

        <!-- Navigation Buttons -->
        <button
          id="prev-datapick"
          class="absolute left-2 top-1/2 -translate-y-1/2 w-10 h-10 bg-zinc-900/80 hover:bg-zinc-800 rounded-full flex items-center justify-center text-white transition-colors border border-zinc-700"
          aria-label="Previous"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        <button
          id="next-datapick"
          class="absolute right-2 top-1/2 -translate-y-1/2 w-10 h-10 bg-zinc-900/80 hover:bg-zinc-800 rounded-full flex items-center justify-center text-white transition-colors border border-zinc-700"
          aria-label="Next"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>

        <!-- Dots Indicator -->
        <div class="flex justify-center gap-2 mt-4">
          {screenshots.map((_, i) => (
            <button
              class={`carousel-dot-datapick w-2 h-2 rounded-full transition-colors ${i === 0 ? 'bg-white' : 'bg-zinc-600 hover:bg-zinc-500'}`}
              data-index={i}
              aria-label={`Screenshot ${i + 1}`}
            />
          ))}
        </div>
      </div>
    </section>

    <script>
      const carouselDatapick = document.getElementById('carousel-datapick');
      const prevBtnDatapick = document.getElementById('prev-datapick');
      const nextBtnDatapick = document.getElementById('next-datapick');
      const dotsDatapick = document.querySelectorAll('.carousel-dot-datapick');
      let currentIndexDatapick = 0;
      const totalSlidesDatapick = 3;

      function updateCarouselDatapick() {
        if (carouselDatapick) {
          carouselDatapick.style.transform = `translateX(-${currentIndexDatapick * 100}%)`;
        }
        dotsDatapick.forEach((dot, i) => {
          dot.classList.toggle('bg-white', i === currentIndexDatapick);
          dot.classList.toggle('bg-zinc-600', i !== currentIndexDatapick);
        });
      }

      prevBtnDatapick?.addEventListener('click', () => {
        currentIndexDatapick = (currentIndexDatapick - 1 + totalSlidesDatapick) % totalSlidesDatapick;
        updateCarouselDatapick();
      });

      nextBtnDatapick?.addEventListener('click', () => {
        currentIndexDatapick = (currentIndexDatapick + 1) % totalSlidesDatapick;
        updateCarouselDatapick();
      });

      dotsDatapick.forEach((dot) => {
        dot.addEventListener('click', () => {
          const index = dot.getAttribute('data-index');
          if (index !== null) {
            currentIndexDatapick = parseInt(index);
            updateCarouselDatapick();
          }
        });
      });
    </script>

    <!-- Overview -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">Overview</h2>
      <div class="text-zinc-400 text-lg leading-relaxed space-y-4">
        <p>Tired of copying and pasting data from websites one by one? DataPick lets you scrape any website with just a few clicks. Simply click on the data you want, and DataPick automatically finds all similar elements on the page. Export your data to CSV, Excel, or Google Sheets instantly.</p>
        <p>No coding skills required. No complex setup. Just point, click, and export.</p>
      </div>
    </section>

    <!-- Features -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {features.map((feature) => (
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
              <div>
                <h3 class="font-semibold text-white mb-1">{feature.title}</h3>
                <p class="text-zinc-400 text-sm">{feature.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Pro Features -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <div class="bg-gradient-to-r from-blue-600/20 to-purple-600/20 border border-zinc-800 rounded-2xl p-8">
        <div class="flex flex-wrap items-center gap-4 mb-6">
          <h2 class="text-2xl font-bold text-white">What You Get with $19</h2>
          <span class="price-badge-paid">One-time Payment</span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {proFeatures.map((feature) => (
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-zinc-300">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recommended For -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">Recommended For</h2>
      <ul class="space-y-4">
        {targetUsers.map((user) => (
          <li class="flex items-start gap-4 text-zinc-400">
            <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>{user}</span>
          </li>
        ))}
      </ul>
    </section>

    <!-- Install Section (Main CTA) -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <div class="bg-gradient-to-r from-blue-600/20 to-green-600/20 border border-zinc-800 rounded-2xl p-8 text-center">
        <h2 class="text-2xl font-bold text-white mb-4">Stop Copying Data Manually</h2>
        <p class="text-zinc-400 mb-8">Get DataPick now and extract website data in seconds.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href={extension.chromeUrl} target="_blank" rel="noopener noreferrer" class="btn-blue flex items-center gap-2 px-8 py-4 text-lg">
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C8.21 0 4.831 1.757 2.632 4.501l3.953 6.848A5.454 5.454 0 0 1 12 6.545h10.691A12 12 0 0 0 12 0zM1.931 5.47A11.943 11.943 0 0 0 0 12c0 6.012 4.42 10.991 10.189 11.864l3.953-6.847a5.45 5.45 0 0 1-6.865-2.29zm13.342 2.166a5.446 5.446 0 0 1 1.45 7.09l.002.001h-.002l-3.952 6.848a12.014 12.014 0 0 0 9.229-9.605zM12 16.364a4.364 4.364 0 1 1 0-8.728 4.364 4.364 0 0 1 0 8.728z"/>
            </svg>
            Add to Chrome - $19
          </a>
        </div>
      </div>
    </section>

    <!-- Related Extensions -->
    <section class="px-6 py-12 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-6">You might also like</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {relatedProducts.map((product) => (
          <a href={product.link} class="product-card group p-6 flex items-center gap-4">
            <img src={product.icon} alt={product.name} class="w-12 h-12 rounded-xl bg-zinc-800" />
            <div>
              <h3 class="font-semibold text-white group-hover:text-blue-400 transition-colors">{product.name}</h3>
              <p class="text-xs text-zinc-400 uppercase tracking-wider">{product.category}</p>
            </div>
            <svg class="w-5 h-5 text-zinc-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        ))}
      </div>
    </section>
  </div>
</Layout>
