---
import ExtensionLayout from '../../layouts/ExtensionLayout.astro';

const extension = {
  name: "物件スカウター（購入版）",
  subtitle: "不動産購入の意思決定をデータでサポート",
  tagline: "坪単価がわかれば、物件選びが変わる。",
  price: "Free",
  status: "Available",
  chromeUrl: "https://chromewebstore.google.com/detail/ioboepegcabodocflleblblnknlfpjka",
  category: "Real Estate",
  lang: "JP",
  icon: "/ext-icons/bukken-scouter-purchase.webp",
  rating: 0,
  reviewCount: 0,
};

const overview = "物件スカウター（購入版）は、SUUMOの購入物件ページで坪単価・㎡単価を自動計算し、物件カードに表示するChrome拡張機能です。数千万円の買い物だからこそ、感覚ではなくデータで判断したい。築年数の色分けハイライト、お気に入り保存、比較表、価格履歴トラッキングなど、効率的な物件探しをサポートする機能を搭載。完全無料、データはローカル保存でプライバシーも安心です。";

const features = [
  { title: "坪単価・㎡単価の自動計算", desc: "物件カードに自動表示、一目でコスパを把握" },
  { title: "築年数ハイライト", desc: "10年以内（緑）、20年以内（黄）、30年超（赤）で色分け" },
  { title: "お気に入り保存", desc: "気になる物件を無制限に保存" },
  { title: "比較表", desc: "複数物件を並べて検討" },
  { title: "価格履歴トラッキング", desc: "物件の価格変動を記録" },
  { title: "CSV/Excelエクスポート", desc: "データを出力して家族と共有" },
  { title: "ハザードマップ連携", desc: "ワンクリックで災害リスクを確認" },
  { title: "完全ローカル保存", desc: "データは外部送信なし、プライバシー安心" },
];

const targetUsers = [
  "中古マンション・戸建ての購入を検討中の方",
  "坪単価で複数物件を比較したい方",
  "割高な物件を避けたい方",
  "物件情報を整理して家族と共有したい方",
];

const screenshots = [
  "/screenshots/bukken-scouter-purchase/screenshot-1.png",
  "/screenshots/bukken-scouter-purchase/screenshot-2.png",
  "/screenshots/bukken-scouter-purchase/screenshot-3.png",
];

const relatedProducts = [
  { name: "物件スカウター（賃貸版）", category: "Real Estate", link: "/extensions/bukken-scouter-rental", icon: "/ext-icons/bukken-scouter-rental.webp" },
  { name: "DataPick", category: "Productivity", link: "/extensions/datapick", icon: "/ext-icons/datapick.webp" },
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: "物件スカウター（購入版）",
  description: extension.tagline,
  applicationCategory: "BrowserApplication",
  operatingSystem: "Chrome",
  offers: { "@type": "Offer", price: "0", priceCurrency: "JPY" },
  author: { "@type": "Organization", name: "S-Hub", url: "https://dev-tools-hub.xyz" },
  downloadUrl: extension.chromeUrl,
};
---

<ExtensionLayout
  extension={extension}
  overview={overview}
  features={features}
  targetUsers={targetUsers}
  screenshots={screenshots}
  relatedProducts={relatedProducts}
  softwareSchema={softwareSchema}
  seoTitle={`${extension.name} - SUUMO購入物件の坪単価計算ツール`}
  seoDescription="SUUMOの購入物件で坪単価・㎡単価を自動計算。築年数ハイライト、お気に入り比較、価格履歴で賢い物件探し。"
  seoKeywords="SUUMO, 購入, 物件比較, Chrome拡張機能, 坪単価, ㎡単価, 不動産"
  ogImage="/screenshots/bukken-scouter-purchase/screenshot-1.png"
  ctaTitle="データで物件を選ぼう"
  ctaDescription="坪単価を自動計算し、賢い物件探しをサポート。"
/>
